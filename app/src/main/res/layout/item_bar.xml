<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#faf9f9"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <!--<Button-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:background="@drawable/ic_left" />-->
                <ImageView
                    android:id="@+id/image_Bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bar2" />

                <TextView
                    android:id="@+id/textView_Bar_Name"
                    style="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#B4aa00ff"
                    android:paddingLeft="16dp"
                    android:text="Name"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
                <!--<Button-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:background="@drawable/ic_right" />-->

            </FrameLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">

                <TableRow
                    android:gravity="center_vertical"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp">
                    <ImageView android:src="@drawable/ic_place_black_24dp" />
                    <TextView
                        android:layout_marginLeft="5dp"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:gravity="center_vertical"
                        android:text="address"
                        android:id="@+id/textView_Bar_Address"
                        android:maxEms="13"
                        />
                </TableRow>

                <TableRow
                    android:gravity="center_vertical"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp">
                    <ImageView android:src="@drawable/ic_access_time_black_24dp" />
                    <TextView
                        android:layout_marginLeft="5dp"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:gravity="center_vertical"
                        android:text="Giờ mở cửa: "
                        android:id="@+id/textView_Bar_Time"
                        android:maxEms="13"
                        />
                </TableRow>



            </TableLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>